---
- name: Sort a list of dictionaries using Python
  hosts: localhost
  tasks:
    - name: Copy Python script to target machine
      copy:
        src: /mnt/c/Tasks/sort_dictionaries.py
        dest: /tmp/sort_dictionaries.py
        mode: '0755'

    - name: Execute Python script
      command: /usr/bin/env python3 /tmp/sort_dictionaries.py
      register: script_output

    - name: Print the script output
      debug:
        msg: "{{ script_output.stdout }}"
